{
  "name": "serverless-multi-tier-tests",
  "version": "1.0.0",
  "description": "Test suite for serverless multi-tier application",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:api": "jest api.test.js --forceExit",
    "test:infrastructure": "jest infrastructure.test.js --forceExit",
    "test:all": "jest --forceExit",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "aws-sdk": "^2.1479.0",
    "axios": "^1.5.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "uuid": "^9.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 60000,
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "./test-results",
        "outputName": "junit.xml"
      }]
    ]
  }
}

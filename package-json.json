{
  "name": "aws-serverless-multi-tier-app",
  "version": "1.0.0",
  "description": "Production-ready AWS serverless multi-tier application",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap",
    "diff": "cdk diff",
    "dev": "nodemon --exec \"npm run build && npm run local\"",
    "local": "sam local start-api",
    "configure": "node scripts/configure.js"
  },
  "keywords": [
    "aws",
    "serverless",
    "cdk",
    "lambda",
    "dynamodb",
    "api-gateway",
    "cognito",
    "amazon-bedrock"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.16",
    "aws-cdk": "2.126.0",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.126.0",
    "aws-sdk": "^2.1545.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.4.1",
    "source-map-support": "^0.5.21"
  }
